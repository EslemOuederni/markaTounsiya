<p><%= link_to "Back", companies_path %></p>

<section class="product">

  <section class="product-info">
    <% cache @company do %>
      <h1><%= @company.name %></h1>
      <a href="<%= @company.website %>"><%= @company.website %></a>
    <% end %>

<% if @company.products.any? %>
  <ul>
    <% @company.products.each do |product| %>
     <li>
      <%= link_to product.name, company_product_path(@company, product) %>
    </li>
    <% end %>
  </ul>
<% else %>
  <p>No products yet.</p>
<% end %>
      <%= link_to "Edit", edit_company_path(@company) %>
      <%= link_to "Add Product", new_company_product_path(@company), class: "btn btn-primary" %>

  </section>
</section>
